---
import SearchBox from '../components/SearchBox.astro';
import Theme from '../components/Theme.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = '知识库', description = '我的个人知识库' } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <script is:inline>
      // 立即应用主题，避免闪烁
      (function() {
        const themes = {
          'ponkotsu-house': {
            bg: '#F2F2F2',
            border: '#D9D4CC',
            textPrimary: '#59382C',
            textSecondary: '#8C5B49',
          },
          'ocean': {
            bg: '#E8F4F8',
            border: '#B8D4E3',
            textPrimary: '#1A4D5C',
            textSecondary: '#2D6A7F',
          },
          'forest': {
            bg: '#F0F5E8',
            border: '#C8D9B0',
            textPrimary: '#2D4A1F',
            textSecondary: '#4A6B3A',
          },
          'sunset': {
            bg: '#FFF5E6',
            border: '#FFD4A3',
            textPrimary: '#8B4513',
            textSecondary: '#CD853F',
          },
        };

        const savedThemeId = localStorage.getItem('theme-id') || 'ponkotsu-house';
        const theme = themes[savedThemeId] || themes['ponkotsu-house'];
        
        if (theme) {
          const root = document.documentElement;
          root.style.setProperty('--color-bg', theme.bg);
          root.style.setProperty('--color-border', theme.border);
          root.style.setProperty('--color-text-primary', theme.textPrimary);
          root.style.setProperty('--color-text-secondary', theme.textSecondary);
        }
      })();
    </script>
  </head>
  <body>
    <header class="header">
      <div class="header-container">
        <a href="/" class="header-logo">
          <span class="logo-icon"></span>
          <span class="logo-text">席剑豪</span>
        </a>
        <SearchBox />
        <div class="header-right">
          <nav class="social-links">
            <a 
              href="https://github.com/xijianhao" 
              target="_blank" 
              rel="noopener noreferrer"
              class="social-link"
              aria-label="GitHub"
            >
              <svg class="social-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
              </svg>
             
            </a>
            <!-- 后续可以在这里添加更多社交链接 -->
            <!-- 
            <a href="#" class="social-link" aria-label="微信">微信图标</a>
            <a href="#" class="social-link" aria-label="小程序">小程序图标</a>
            <a href="#" class="social-link" aria-label="小红书">小红书图标</a>
            -->
          </nav>
          <Theme />
        </div>
      </div>
    </header>
    <main class="main">
      <slot />
    </main>
    <footer class="footer">
      <p>© 2025 知识库 - 记录学习与生活</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    /* 主题颜色变量 */
    --color-bg: #F2F2F2;
    --color-border: #D9D4CC;
    --color-text-primary: #59382C;
    --color-text-secondary: #8C5B49;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
      'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
      sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    background: var(--color-bg);
    min-height: 100vh;
    color: var(--color-text-primary);
    line-height: 1.6;
  }

  .header {
    background: var(--color-border);
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 1px 3px rgba(89, 56, 44, 0.1);
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-left: auto;
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: var(--color-text-primary);
    text-decoration: none;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: rgba(89, 56, 44, 0.1);
    transform: translateY(-1px);
  }

  .social-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  .header-logo {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    text-decoration: none;
    color: var(--color-text-primary);
    font-size: 1.125rem;
    font-weight: 600;
    flex-shrink: 0;
  }

  .logo-icon {
    font-size: 1.375rem;
  }

  .main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    min-height: calc(100vh - 200px);
  }

  .footer {
    text-align: center;
    padding: 2rem;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 1rem;
      gap: 0.5rem;
    }

    .header-right {
      gap: 0.5rem;
      margin-right: 0.5rem;
    }

    .social-links {
      gap: 0.25rem;
    }

    .social-link {
      width: 1.75rem;
      height: 1.75rem;
    }

    .social-icon {
      width: 1.125rem;
      height: 1.125rem;
    }

    .main {
      padding: 1rem;
    }
  }
</style>
