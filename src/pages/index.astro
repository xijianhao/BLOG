---
import Layout from '../layouts/Layout.astro';
import NotebookCard from '../components/NotebookCard.astro';
import { getAllNotebooks } from '../utils/notebooks';
import type { CollectionEntry } from 'astro:content';

const notebooks = await getAllNotebooks();
---

<Layout title="知识库 - 首页">
  <div class="home-container">
    <div class="home-header">
      <h1 class="home-title">我的知识库</h1>
      <p class="home-subtitle">记录学习、工作和生活的点点滴滴</p>
    </div>
    <div class="notebooks-grid">
      {notebooks.map((notebook: CollectionEntry<'notebooks'>) => (
        <NotebookCard notebook={notebook} />
      ))}
    </div>
  </div>
</Layout>

<style>
  .home-container {
    animation: fadeIn 0.5s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .home-header {
    text-align: center;
    margin-bottom: 3rem;
    color: var(--color-text-primary);
  }

  .home-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .home-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    opacity: 0.9;
  }

  .notebooks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .home-title {
      font-size: 2rem;
    }

    .home-subtitle {
      font-size: 1rem;
    }

    .notebooks-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
