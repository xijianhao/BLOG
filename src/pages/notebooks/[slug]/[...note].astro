---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { getNotebookBySlug } from '../../../utils/notebooks';
import { TableOfContents } from '../../../components/TableOfContents';

export async function getStaticPaths() {
  const notes = await getCollection('notes');
  
  return notes.map((note) => {
    const notebookSlug = note.data.notebook;
    // note.slug 可能包含路径，如 "react/react-hooks"
    // [...note] 路由会自动处理路径，直接传递字符串即可
    return {
      params: { slug: notebookSlug, note: note.slug },
      props: { note, notebookSlug },
    };
  });
}

// 直接使用 props 中传递的 note，避免重新查找
const { note, notebookSlug } = Astro.props;

const notebook = await getNotebookBySlug(notebookSlug);
const { Content } = await note.render();
const { title, date, tags } = note.data;
---

<Layout title={`${title} - ${notebook?.data.title || '知识库'}`}>
  <article class="note-page">
    <header class="note-header">
      <a href={`/notebooks/${notebookSlug}`} class="note-back-button" aria-label="返回">
        <svg class="back-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
      </a>
      <div class="note-header-content">
        <h1 class="note-title">{title}</h1>
      </div>
    </header>

    <div class="note-wrapper">
      <div class="note-content">
        <Content />
      </div>
      <TableOfContents client:load />
    </div>
  </article>
</Layout>

<style>
  .note-page {
    animation: fadeIn 0.5s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .note-header {
    background: var(--color-bg);
    padding: 1rem 1.25rem;
    border-radius: 16px;
    margin-bottom: 1rem;
    box-shadow: 0 4px 12px rgba(89, 56, 44, 0.15);
    border: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    gap: 1rem;
    position: relative;
  }

  .note-back-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: var(--color-text-primary);
    text-decoration: none;
    border-radius: 8px;
    background: var(--color-border);
    border: 1px solid var(--color-border);
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    flex-shrink: 0;
    box-shadow: 0 1px 3px rgba(89, 56, 44, 0.1);
  }

  .note-back-button:hover {
    background: var(--color-text-secondary);
    color: var(--color-bg);
    border-color: var(--color-text-secondary);
    transform: translateX(-2px);
    box-shadow: 0 2px 6px rgba(89, 56, 44, 0.2);
  }

  .note-back-button:active {
    transform: translateX(-2px) scale(0.95);
  }

  .back-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  .note-header-content {
    display: flex;
    align-items: center;
    flex: 1;
    min-width: 0;
  }

  .note-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0;
    color: var(--color-text-primary);
    line-height: 1.3;
    flex: 1;
    min-width: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .note-wrapper {
    position: relative;
  }

  .note-content {
    background: var(--color-bg);
    padding: 1.5rem;
    border-radius: 16px;
    box-shadow: 0 4px 6px rgba(89, 56, 44, 0.1);
    line-height: 1.8;
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
    max-width: 100%;
    margin: 0 auto;
  }

  /* 目录样式 */
  .note-content :global(h1),
  .note-content :global(h2),
  .note-content :global(h3),
  .note-content :global(h4),
  .note-content :global(h5),
  .note-content :global(h6) {
    scroll-margin-top: 100px;
  }

  .note-content :global(h1),
  .note-content :global(h2),
  .note-content :global(h3),
  .note-content :global(h4),
  .note-content :global(h5),
  .note-content :global(h6) {
    margin-top: 0rem;
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--color-text-primary);
    line-height: 1.3;
  }

  .note-content :global(h1) {
    font-size: 2rem;
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 0.5rem;
  }

  .note-content :global(h2) {
    font-size: 1.5rem;
  }

  .note-content :global(h3) {
    font-size: 1.25rem;
  }

  .note-content :global(p) {
    margin-bottom: 1rem;
  }

  .note-content :global(ul),
  .note-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .note-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .note-content :global(code) {
    background: var(--color-border);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    color: var(--color-text-primary);
  }

  .note-content :global(pre) {
    background: var(--color-text-primary);
    color: var(--color-bg);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    line-height: 1.6;
    border: 1px solid var(--color-text-secondary);
  }

  .note-content :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
    font-size: 0.875rem;
  }

  .note-content :global(blockquote) {
    border-left: 4px solid var(--color-text-secondary);
    padding-left: 1rem;
    margin-left: 0;
    margin-bottom: 1rem;
    color: var(--color-text-secondary);
    font-style: italic;
    background: var(--color-border);
    padding: 1rem;
    border-radius: 4px;
  }

  .note-content :global(a) {
    color: var(--color-text-secondary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .note-content :global(a:hover) {
    border-bottom-color: var(--color-text-secondary);
    color: var(--color-text-primary);
  }

  .note-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .note-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
  }

  .note-content :global(th),
  .note-content :global(td) {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  .note-content :global(th) {
    font-weight: 600;
    background: var(--color-border);
    color: var(--color-text-primary);
  }

  @media (max-width: 768px) {
    .note-header {
      padding: 0.875rem 1rem;
      gap: 0.75rem;
      align-items: center;
    }

    .note-back-button {
      width: 2.25rem;
      height: 2.25rem;
      flex-shrink: 0;
    }

    .back-icon {
      width: 1.125rem;
      height: 1.125rem;
    }

    .note-header-content {
      flex: 1;
      min-width: 0;
    }

    .note-title {
      font-size: 1.25rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .note-content {
      padding: 1rem;
    }

    .note-content :global(h1) {
      font-size: 1.5rem;
    }

    .note-content :global(h2) {
      font-size: 1.25rem;
    }

    .note-content :global(pre) {
      padding: 1rem;
      font-size: 0.8125rem;
    }
  }

  /* PC 端目录悬浮样式 */
  @media (min-width: 1024px) {
    .note-wrapper {
      position: relative;
    }

    .note-content {
      /* 保持原来的宽度，不限制 */
      width: 100%;
      margin: 0 auto;
      /* 确保内容不被目录遮挡，添加最小左边距 */
      position: relative;
      z-index: 1;
    }
  }
</style>

<style is:global>
  /* 目录组件全局样式 */
  .table-of-contents {
    position: fixed;
    width: 240px;
    max-height: calc(100vh - 200px);
    overflow-y: auto;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1rem;
    box-shadow: 0 2px 8px rgba(89, 56, 44, 0.1);
    z-index: 10;
    display: none;
  }

  @media (min-width: 1024px) {
    .table-of-contents {
      display: block;
      /* 垂直居中：使用 top: 50% 和 transform */
      top: 50%;
      transform: translateY(-50%);
    }
  }

  /* 当屏幕宽度 >= 1200px 时，main 容器居中，目录放在 main 左侧 */
  @media (min-width: 1200px) {
    .table-of-contents {
      /* main 左边界 = (100vw - 1200px) / 2 */
      /* 目录宽度 240px，留出 20px 间距 */
      /* left = (100vw - 1200px) / 2 - 260px */
      left: calc((100vw - 1200px) / 2 - 260px);
      /* 确保不会太靠左，最小距离左侧 1rem */
      left: max(1rem, calc((100vw - 1200px) / 2 - 260px));
    }
  }

  /* 当屏幕宽度在 1024px 到 1200px 之间时，目录紧贴左侧 */
  @media (min-width: 1024px) and (max-width: 1199px) {
    .table-of-contents {
      left: 1rem;
      /* 确保目录右边界不超过视口中心，避免覆盖内容 */
      right: auto;
    }
  }

  .toc-header {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: 0.5rem;
  }

  .toc-link {
    display: block;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.5;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    transition: all 0.2s ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .toc-link:hover {
    color: var(--color-text-primary);
    background: var(--color-border);
  }

  .toc-item.active .toc-link {
    color: var(--color-text-primary);
    background: var(--color-border);
    font-weight: 500;
  }

  /* 不同级别的缩进 */
  .toc-level-1 {
    padding-left: 0;
  }

  .toc-level-2 {
    padding-left: 0.75rem;
  }

  .toc-level-3 {
    padding-left: 1.5rem;
  }

  .toc-level-4 {
    padding-left: 2.25rem;
  }

  .toc-level-5 {
    padding-left: 3rem;
  }

  .toc-level-6 {
    padding-left: 3.75rem;
  }

  /* 滚动条样式 */
  .table-of-contents::-webkit-scrollbar {
    width: 6px;
  }

  .table-of-contents::-webkit-scrollbar-track {
    background: transparent;
  }

  .table-of-contents::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 3px;
  }

  .table-of-contents::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-secondary);
  }
</style>

