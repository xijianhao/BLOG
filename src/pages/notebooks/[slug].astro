---
import Layout from '../../layouts/Layout.astro';
import NoteCard from '../../components/NoteCard.astro';
import { getNotebookBySlug, getNotesByNotebook } from '../../utils/notebooks';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const notebooks = await getCollection('notebooks');
  
  return notebooks.map((notebook) => ({
    params: { slug: notebook.slug },
    props: { notebook },
  }));
}

const { notebook } = Astro.props;
const notes = await getNotesByNotebook(notebook.slug);
const { title, description, icon, color } = notebook.data;
---

<Layout title={`${title} - Áü•ËØÜÂ∫ì`} description={description || undefined}>
  <div class="notebook-page">
    <div class="notebook-header">
      <a href="/" class="back-link">‚Üê ËøîÂõûÈ¶ñÈ°µ</a>
      <div class="notebook-info">
        <div class="notebook-icon-large" style={`--notebook-color: ${color || '#6366f1'}`}>
          {icon || 'üìö'}
        </div>
        <div>
          <h1 class="notebook-title">{title}</h1>
          {description && <p class="notebook-description">{description}</p>}
        </div>
      </div>
    </div>

    <div class="notes-section">
      <div class="notes-header">
        <h2 class="notes-title">Á¨îËÆ∞ÂàóË°®</h2>
        <span class="notes-count">{notes.length} ÁØáÁ¨îËÆ∞</span>
      </div>
      {notes.length > 0 ? (
        <div class="notes-grid">
          {notes.map((note) => (
            <NoteCard note={note} notebookSlug={notebook.slug} />
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <p>ÊöÇÊó†Á¨îËÆ∞ÔºåÂø´ÂéªÊ∑ªÂä†‰∏Ä‰∫õÂêßÔºÅ</p>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .notebook-page {
    animation: fadeIn 0.5s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #2e7d32;
    text-decoration: none;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 8px;
    border: 1px solid rgba(46, 125, 50, 0.2);
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    font-weight: 500;
    box-shadow: 0 1px 3px rgba(46, 125, 50, 0.1);
  }

  .back-link:hover {
    background: rgba(255, 255, 255, 0.95);
    border-color: rgba(46, 125, 50, 0.3);
    transform: translateX(-3px);
    box-shadow: 0 2px 6px rgba(46, 125, 50, 0.15);
    color: #1b5e20;
  }

  .back-link:active {
    transform: translateX(-3px) scale(0.98);
  }

  .notebook-header {
    margin-bottom: 3rem;
  }

  .notebook-info {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .notebook-icon-large {
    font-size: 4rem;
    width: 100px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--notebook-color, #6366f1) 0%, color-mix(in srgb, var(--notebook-color, #6366f1) 80%, transparent) 100%);
    border-radius: 16px;
    flex-shrink: 0;
  }

  .notebook-title {
    font-size: 1.875rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #2e7d32;
  }

  .notebook-description {
    font-size: 0.9375rem;
    color: #558b2f;
    margin: 0;
  }

  .notes-section {
    background: rgba(255, 255, 255, 0.95);
    padding: 1.75rem;
    border-radius: 16px;
    box-shadow: 0 4px 12px rgba(46, 125, 50, 0.12);
    border: 1px solid rgba(46, 125, 50, 0.15);
  }

  .notes-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #f3f4f6;
  }

  .notes-title {
    font-size: 1.375rem;
    font-weight: 600;
    color: #2e7d32;
    margin: 0;
  }

  .notes-count {
    font-size: 0.8125rem;
    color: #558b2f;
    background: rgba(200, 230, 201, 0.5);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    border: 1px solid rgba(46, 125, 50, 0.2);
  }

  .notes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 3rem;
    color: #9ca3af;
  }

  @media (max-width: 768px) {
    .notebook-info {
      flex-direction: column;
      text-align: center;
      padding: 1.5rem;
    }

    .notebook-icon-large {
      width: 80px;
      height: 80px;
      font-size: 3rem;
    }

    .notebook-title {
      font-size: 1.5rem;
    }

    .notes-section {
      padding: 1.5rem;
    }

    .notes-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .notes-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>

