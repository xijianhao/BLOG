---
import Layout from '../../layouts/Layout.astro';
import NoteCard from '../../components/NoteCard.astro';
import { getNotebookBySlug, getNotesByNotebook } from '../../utils/notebooks';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const notebooks = await getCollection('notebooks');
  
  return notebooks.map((notebook) => ({
    params: { slug: notebook.slug },
    props: { notebook },
  }));
}

const { notebook } = Astro.props;
const notes = await getNotesByNotebook(notebook.slug);
const { title, description, icon, color } = notebook.data;
---

<Layout title={`${title} - 知识库`} description={description || undefined}>
  <div class="notebook-page">
    <div class="notebook-header">
      <a href="/" class="back-link">← 返回首页</a>
      <div class="notebook-info">
       
        <h1 class="notebook-title">{title}</h1>
      </div>
    </div>

    <div class="notes-section">
      <div class="notes-header">
        <h2 class="notes-title">笔记列表</h2>
        <span class="notes-count">{notes.length} 篇笔记</span>
      </div>
      {notes.length > 0 ? (
        <div class="notes-grid">
          {notes.map((note) => (
            <NoteCard note={note} notebookSlug={notebook.slug} />
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <p>暂无笔记，快去添加一些吧！</p>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .notebook-page {
    animation: fadeIn 0.5s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-primary);
    text-decoration: none;
    font-size: 1rem;
    padding: 0.5rem 1rem;
    background: var(--color-bg);
    font-weight: 500;
    border-radius: 6px;
    border: 1px solid var(--color-border);
  }

  .back-link:hover {
    background: var(--color-border);
    color: var(--color-text-primary);
  }

  .notebook-header {
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    position: relative;
    background: var(--color-bg);
    border-radius: 8px;
    border: 1px solid var(--color-border);
    box-shadow: 0 4px 12px rgba(89, 56, 44, 0.15);
    overflow: hidden;
    padding: 0.5rem;
  }

  .notebook-info {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }


  .notebook-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-text-primary);
  }

  .notes-section {
    background: var(--color-bg);
    padding: 1.25rem;
    border-radius: 16px;
    box-shadow: 0 4px 12px rgba(89, 56, 44, 0.15);
    border: 1px solid var(--color-border);
  }

  .notes-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-border);
  }

  .notes-title {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0;
  }

  .notes-count {
    font-size: 0.8125rem;
    color: var(--color-text-primary);
    background: var(--color-border);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    border: 1px solid var(--color-border);
  }

  .notes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .empty-state {
    text-align: center;
    padding: 3rem;
    color: var(--color-text-secondary);
  }

  @media (max-width: 768px) {
    .notebook-info {
      flex-direction: column;
      text-align: center;
    }

    .notebook-title {
      font-size: 1.5rem;
    }

    .notes-section {
      padding: 1.5rem;
    }

    .notes-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .notes-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>

