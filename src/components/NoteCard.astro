---
import type { CollectionEntry } from 'astro:content';


interface Props {
  note: CollectionEntry<'notes'>;
  notebookSlug?: string;
  notebookIcon?: string | null;
  notebookColor?: string | null;
}

const { note, notebookSlug, notebookIcon, notebookColor } = Astro.props;

const { title, date, tags, excerpt } = note.data;
const href = notebookSlug 
  ? `/notebooks/${notebookSlug}/${note.slug}`
  : `/notes/${note.slug}`;

// å¤„ç†å›¾æ ‡ï¼šè§£æ SVG æˆ–è¿”å› emoji
function parseIcon(icon: string | null | undefined): { isSvg: boolean; svgContent: string | null; emoji: string } {
  if (!icon) return { isSvg: false, svgContent: null, emoji: 'ğŸ“š' };
  
  // æ¸…ç†å¤šè¡Œå­—ç¬¦ä¸²ä¸­çš„ç©ºç™½
  let cleanedIcon = icon.trim().replace(/\s+/g, ' ').trim();
  
  // å¦‚æœæ˜¯SVGï¼Œæå–å†…å®¹å¹¶å¤„ç†
  if (cleanedIcon.includes('<svg')) {
    // æå– SVG æ ‡ç­¾å†…çš„æ‰€æœ‰å†…å®¹
    const svgMatch = cleanedIcon.match(/<svg([^>]*)>(.*?)<\/svg>/s);
    if (svgMatch) {
      let svgAttrs = svgMatch[1];
      let svgInner = svgMatch[2];
      
      // æ›¿æ¢é¢œè‰²ä¸º currentColor
      svgInner = svgInner.replace(/(fill|stroke)=["']#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})["']/gi, `$1="currentColor"`);
      
      // ç¡®ä¿æœ‰å¿…è¦çš„å±æ€§ï¼ˆç§»åŠ¨ç«¯å…¼å®¹æ€§ï¼‰
      if (!svgAttrs.includes('xmlns=')) {
        svgAttrs += ' xmlns="http://www.w3.org/2000/svg"';
      }
      if (!svgAttrs.includes('viewBox') && !svgAttrs.includes('width')) {
        svgAttrs += ' viewBox="0 0 24 24"';
      }
      if (!svgAttrs.includes('preserveAspectRatio')) {
        svgAttrs += ' preserveAspectRatio="xMidYMid meet"';
      }
      // ç§»åŠ¨ç«¯ç‰¹å®šï¼šæ·»åŠ æ˜ç¡®çš„å°ºå¯¸å±æ€§
      if (!svgAttrs.includes('width=')) {
        svgAttrs += ' width="24" height="24"';
      }
      
      return {
        isSvg: true,
        svgContent: `<svg${svgAttrs}>${svgInner}</svg>`,
        emoji: ''
      };
    }
  }
  
  // å¦åˆ™è¿”å›åŸå§‹å›¾æ ‡ï¼ˆemojiç­‰ï¼‰
  return { isSvg: false, svgContent: null, emoji: cleanedIcon };
}

const iconData = parseIcon(notebookIcon);
const iconColor = notebookColor || '#6366f1';

---

<a href={href} class="note-card">
  <div class="note-content">
    <div class="note-header">
      {iconData.isSvg ? (
        <div 
          class="notebook-icon" 
          style={`--notebook-color: ${iconColor}`}
          set:html={iconData.svgContent}
          aria-hidden="true"
        />
      ) : (
        <div class="notebook-icon" style={`--notebook-color: ${iconColor}`}>
          {iconData.emoji}
        </div>
      )}
      <h3 class="note-title">{title}</h3>
      <time class="note-date" datetime={date.toISOString()}>
        {date.toLocaleDateString('zh-CN', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </time>
    </div>
    {excerpt && <p class="note-excerpt">{excerpt}</p>}
  </div>
</a>

<style>
  .note-card {
    display: flex;
    align-items: flex-start;
    gap: 0.875rem;
    padding: 1rem 1.25rem;
    background: var(--color-bg);
    border-radius: 10px;
    border: 1px solid var(--color-border);
    text-decoration: none;
    color: inherit;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 4px rgba(89, 56, 44, 0.1);
  }

  .note-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 16px rgba(89, 56, 44, 0.2);
    border-color: var(--color-text-secondary);
    background: var(--color-border);
  }

  .note-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    min-width: 40px;
    border-radius: 8px;
    background: var(--color-border);
    color: var(--note-color);
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .note-card:hover .note-icon-wrapper {
    background: var(--note-color);
    color: white;
    transform: scale(1.05);
  }

  .note-content {
    flex: 1;
    min-width: 0;
  }

  .notebook-icon {
    font-size: 1rem;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    flex-shrink: 0;
    background: var(--color-bg);
    overflow: visible;
    color: var(--color-text-primary);
    /* ç¡®ä¿ç§»åŠ¨ç«¯å®¹å™¨æ­£ç¡®æ˜¾ç¤º */
    position: relative;
    min-width: 20px;
    min-height: 20px;
    /* ç§»åŠ¨ç«¯ç‰¹å®šä¿®å¤ï¼šç¡®ä¿å®¹å™¨å¯è§ */
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
  }

  .notebook-icon svg {
    width: 100% !important;
    height: 100% !important;
    display: block !important;
    flex-shrink: 0;
    box-sizing: border-box;
    /* ç¡®ä¿ç§»åŠ¨ç«¯æ­£ç¡®æ¸²æŸ“ */
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    /* é˜²æ­¢SVGåœ¨æŸäº›ç§»åŠ¨æµè§ˆå™¨ä¸­ä¸æ˜¾ç¤º */
    visibility: visible !important;
    opacity: 1 !important;
    /* ç¡®ä¿ SVG åœ¨ç§»åŠ¨ç«¯å¯è§ */
    position: relative;
    z-index: 1;
    /* ç§»åŠ¨ç«¯ç‰¹å®šä¿®å¤ï¼šå¼ºåˆ¶ç¡¬ä»¶åŠ é€Ÿ */
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    /* ç¡®ä¿ SVG å†…å®¹å¯è§ */
    pointer-events: none;
  }

  .note-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.875rem;
    margin-bottom: 0.625rem;
  }

  .note-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-primary);
    line-height: 1.4;
  }

  .note-date {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    white-space: nowrap;
  }

  .note-excerpt {
    margin: 0 0 0.75rem 0;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .note-header {
      flex-direction: column;
      gap: 0.5rem;
    }

    .notebook-icon svg {
      /* ç§»åŠ¨ç«¯ç¡®ä¿SVGæ­£ç¡®æ˜¾ç¤º */
      width: 100% !important;
      height: 100% !important;
      min-width: 0;
      min-height: 0;
    }

    .note-date {
      font-size: 0.8125rem;
    }
  }
</style>

