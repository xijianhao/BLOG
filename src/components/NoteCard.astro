---
import type { CollectionEntry } from 'astro:content';


interface Props {
  note: CollectionEntry<'notes'>;
  notebookSlug?: string;
}

const { note, notebookSlug } = Astro.props;
const { title, date, tags, excerpt, icon, color } = note.data;
const href = notebookSlug 
  ? `/notebooks/${notebookSlug}/${note.slug}`
  : `/notes/${note.slug}`;
---

<a href={href} class="note-card">
  <div class="note-content">
    <div class="note-header">
      <h3 class="note-title">{title}</h3>
      <time class="note-date" datetime={date.toISOString()}>
        {date.toLocaleDateString('zh-CN', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </time>
    </div>
    {excerpt && <p class="note-excerpt">{excerpt}</p>}
    {tags && tags.length > 0 && (
      <div class="note-tags">
        {tags.map(tag => (
          <span class="note-tag">{tag}</span>
        ))}
      </div>
    )}
  </div>
</a>

<style>
  .note-card {
    display: flex;
    align-items: flex-start;
    gap: 0.875rem;
    padding: 1rem 1.25rem;
    background: var(--color-bg);
    border-radius: 10px;
    border: 1px solid var(--color-border);
    text-decoration: none;
    color: inherit;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 4px rgba(89, 56, 44, 0.1);
  }

  .note-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 16px rgba(89, 56, 44, 0.2);
    border-color: var(--color-text-secondary);
    background: var(--color-border);
  }

  .note-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    min-width: 40px;
    border-radius: 8px;
    background: var(--color-border);
    color: var(--note-color);
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .note-card:hover .note-icon-wrapper {
    background: var(--note-color);
    color: white;
    transform: scale(1.05);
  }

  .note-content {
    flex: 1;
    min-width: 0;
  }

  .note-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.875rem;
    margin-bottom: 0.625rem;
  }

  .note-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-primary);
    flex: 1;
    line-height: 1.4;
  }

  .note-date {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    white-space: nowrap;
  }

  .note-excerpt {
    margin: 0 0 0.75rem 0;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  .note-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .note-tag {
    display: inline-block;
    padding: 0.1875rem 0.625rem;
    font-size: 0.6875rem;
    background: var(--color-border);
    color: var(--color-text-primary);
    border-radius: 10px;
    font-weight: 500;
    border: 1px solid var(--color-border);
  }

  @media (max-width: 768px) {
    .note-header {
      flex-direction: column;
      gap: 0.5rem;
    }

    .note-date {
      font-size: 0.8125rem;
    }
  }
</style>

