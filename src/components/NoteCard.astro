---
import type { CollectionEntry } from 'astro:content';


interface Props {
  note: CollectionEntry<'notes'>;
  notebookSlug?: string;
  notebookIcon?: string | null;
  notebookColor?: string | null;
}

const { note, notebookSlug, notebookIcon, notebookColor } = Astro.props;
const { title, date, tags, excerpt } = note.data;
const href = notebookSlug 
  ? `/notebooks/${notebookSlug}/${note.slug}`
  : `/notes/${note.slug}`;

// å¤„ç†å›¾æ ‡ï¼šå¦‚æœæ˜¯SVGï¼Œæ›¿æ¢å…¶ä¸­çš„é¢œè‰²ä¸ºåŠ¨æ€é¢œè‰²
function processIcon(icon: string | null | undefined): string {
  if (!icon) return 'ğŸ“š';
  
  // æ¸…ç†å¤šè¡Œå­—ç¬¦ä¸²ä¸­çš„ç©ºç™½ï¼ˆfrontmatter ä¸­çš„ | ä¼šä¿ç•™æ¢è¡Œå’Œç¼©è¿›ï¼‰
  // è§„èŒƒåŒ–ç©ºç™½å­—ç¬¦ï¼Œä½†ä¿æŒ SVG ç»“æ„
  let cleanedIcon = icon.trim();
  // å°†æ¢è¡Œå’Œå¤šä¸ªç©ºæ ¼æ›¿æ¢ä¸ºå•ä¸ªç©ºæ ¼
  cleanedIcon = cleanedIcon.replace(/\s+/g, ' ').trim();
  
  // å¦‚æœæ˜¯SVGï¼Œæ›¿æ¢é¢œè‰²ä¸º currentColorï¼ˆè·Ÿéšä¸»é¢˜è‰²ï¼‰
  if (cleanedIcon.includes('<svg')) {
    // å°† SVG ä¸­çš„é¢œè‰²æ›¿æ¢ä¸º currentColorï¼Œè¿™æ ·ä¼šè·Ÿéšçˆ¶å…ƒç´ çš„æ–‡æœ¬é¢œè‰²ï¼ˆä¸»é¢˜è‰²ï¼‰
    let processed = cleanedIcon.replace(/(fill|stroke)=["']#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})["']/gi, `$1="currentColor"`);
    
    // ç¡®ä¿SVGæœ‰å¿…è¦çš„ç§»åŠ¨ç«¯å…¼å®¹å±æ€§
    // å¦‚æœæ²¡æœ‰preserveAspectRatioï¼Œæ·»åŠ å®ƒä»¥ç¡®ä¿æ­£ç¡®çš„ç¼©æ”¾
    if (!processed.includes('preserveAspectRatio')) {
      processed = processed.replace(/<svg([^>]*)>/, '<svg$1 preserveAspectRatio="xMidYMid meet">');
    }
    
    // ç¡®ä¿æœ‰xmlnså±æ€§ï¼ˆç§»åŠ¨ç«¯æµè§ˆå™¨éœ€è¦ï¼‰
    if (!processed.includes('xmlns=')) {
      processed = processed.replace(/<svg([^>]*)>/, '<svg$1 xmlns="http://www.w3.org/2000/svg">');
    }
    
    return processed;
  }
  
  // å¦åˆ™è¿”å›åŸå§‹å›¾æ ‡ï¼ˆemojiç­‰ï¼‰
  return cleanedIcon;
}

const iconContent = processIcon(notebookIcon);
const isSvg = iconContent.includes('<svg');
const iconColor = notebookColor || '#6366f1';

---

<a href={href} class="note-card">
  <div class="note-content">
    <div class="note-header">
      {isSvg ? (
        <div 
          class="notebook-icon" 
          style={`--notebook-color: ${iconColor}`}
          set:html={iconContent}
        />
      ) : (
        <div class="notebook-icon" style={`--notebook-color: ${iconColor}`}>
          {iconContent}
        </div>
      )}
      <h3 class="note-title">{title}</h3>
      <time class="note-date" datetime={date.toISOString()}>
        {date.toLocaleDateString('zh-CN', { 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric' 
        })}
      </time>
    </div>
    {excerpt && <p class="note-excerpt">{excerpt}</p>}
  </div>
</a>

<style>
  .note-card {
    display: flex;
    align-items: flex-start;
    gap: 0.875rem;
    padding: 1rem 1.25rem;
    background: var(--color-bg);
    border-radius: 10px;
    border: 1px solid var(--color-border);
    text-decoration: none;
    color: inherit;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 4px rgba(89, 56, 44, 0.1);
  }

  .note-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 16px rgba(89, 56, 44, 0.2);
    border-color: var(--color-text-secondary);
    background: var(--color-border);
  }

  .note-icon-wrapper {
