    line-height: 1.4;
  }

  .note-date {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    white-space: nowrap;
  }

  .note-excerpt {
    margin: 0 0 0.75rem 0;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .note-header {
      flex-direction: column;
      gap: 0.5rem;
    }

    .notebook-icon svg {
      /* ç§»åŠ¨ç«¯ç¡®ä¿SVGæ­£ç¡®æ˜¾ç¤º */
      width: 100% !important;
      height: 100% !important;
      min-width: 0;
