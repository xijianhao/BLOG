    color: white;
    transform: scale(1.05);
  }

  .note-content {
    flex: 1;
    min-width: 0;
  }

  .notebook-icon {
    font-size: 1rem;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    flex-shrink: 0;
    background: var(--color-bg);
    overflow: visible;
    color: var(--color-text-primary);
  }

  .notebook-icon svg {
    width: 100% !important;
    height: 100% !important;
    display: block !important;
    flex-shrink: 0;
    box-sizing: border-box;
    /* ç¡®ä¿ç§»åŠ¨ç«¯æ­£ç¡®æ¸²æŸ“ */
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    /* é˜²æ­¢SVGåœ¨æŸäº›ç§»åŠ¨æµè§ˆå™¨ä¸­ä¸æ˜¾ç¤º */
    visibility: visible;
    opacity: 1;
  }

  .note-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.875rem;
    margin-bottom: 0.625rem;
  }

  .note-title {
