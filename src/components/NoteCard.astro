    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    min-width: 40px;
    border-radius: 8px;
    background: var(--color-border);
    color: var(--note-color);
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

