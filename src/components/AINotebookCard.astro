---
import type { CollectionEntry } from 'astro:content';

interface Props {
  notebook: CollectionEntry<'aiNotebooks'>;
  noteCount?: number;
}

const { notebook, noteCount = 0 } = Astro.props;
const { title, color } = notebook.data;
---

<a href={`/ai-notebooks/${notebook.slug}`} class="ai-notebook-card">
  <div class="book-spine" style={`background: ${color || '#6366f1'}`}></div>
  <div class="book-cover" style={`border-left-color: ${color || '#6366f1'}`}>
    <div class="book-content">
      <h3 class="book-title">{title}</h3>
      <span class="note-count">{noteCount} ç¯‡</span>
    </div>
  </div>
</a>

<style>
  .ai-notebook-card {
    display: flex;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    height: 80px;
  }

  .ai-notebook-card:hover {
    transform: translateY(-4px);
  }

  .book-spine {
    width: 12px;
    height: 100%;
    border-radius: 3px 0 0 3px;
    box-shadow:
      inset -2px 0 4px rgba(0, 0, 0, 0.1),
      2px 0 4px rgba(0, 0, 0, 0.1);
    flex-shrink: 0;
  }

  .book-cover {
    flex: 1;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-left: 4px solid;
    border-radius: 0 8px 8px 0;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    box-shadow:
      4px 4px 8px rgba(89, 56, 44, 0.1),
      0 2px 4px rgba(89, 56, 44, 0.05);
    position: relative;
    overflow: hidden;
  }

  .book-cover::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, 0.03) 0%,
      transparent 10%,
      transparent 90%,
      rgba(0, 0, 0, 0.02) 100%
    );
    pointer-events: none;
  }

  .ai-notebook-card:hover .book-cover {
    box-shadow:
      6px 6px 12px rgba(89, 56, 44, 0.15),
      0 4px 8px rgba(89, 56, 44, 0.08);
    border-color: var(--color-text-secondary);
  }

  .book-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .book-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-primary);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .note-count {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .ai-notebook-card {
      height: 75px;
    }

    .book-spine {
      width: 10px;
    }

    .book-cover {
      padding: 0.875rem;
    }

    .book-title {
      font-size: 0.9375rem;
    }

    .note-count {
      font-size: 0.75rem;
    }
  }
</style>
