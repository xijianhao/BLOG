---
import type { CollectionEntry } from 'astro:content';

interface Props {
  notebook: CollectionEntry<'notebooks'> | CollectionEntry<'aiNotebooks'>;
  notebookSlug: string;
  notes: CollectionEntry<'notes'>[] | CollectionEntry<'aiNotes'>[];
  noteSlug: string | null;
  noteEntry: CollectionEntry<'notes'> | CollectionEntry<'aiNotes'> | null;
  isAINotebook?: boolean;
}

const { notebook, notebookSlug, notes, noteSlug, noteEntry, isAINotebook = false } = Astro.props;
const { title: nbTitle } = notebook.data;

const renderResult = noteEntry ? await noteEntry.render() : null;
const Content = renderResult?.Content;
const { title: noteTitle, date, tags } = noteEntry?.data ?? {};

const baseUrl = isAINotebook ? '/ai-notebooks' : '/notebooks';

// 规范化路径：移除尾随斜杠
function normalizePath(path: string): string {
  return path.replace(/\/$/, '') || '/';
}

// 获取当前 URL 路径，用于高亮判断
const currentPath = normalizePath(Astro.url.pathname);
---

<div class="notebook-layout">
  <aside class="sidebar" transition:persist={`notebook-sidebar-${notebookSlug}`}>
    <div class="sidebar-header">
      <a href="/" class="back-link" aria-label="返回首页">←</a>
      <h1 class="notebook-title">{nbTitle}</h1>
    </div>
    <nav class="notes-nav">
      {notes.length > 0 ? (
        <ul class="notes-list">
          {notes.map((note) => {
            // 对于所有笔记本，都需要移除文件夹前缀，只使用文件名
            // 因为文件夹名已经包含在 notebookSlug 中
            const noteSlug = note.slug.split('/').pop() || note.slug;
            const href = `${baseUrl}/${notebookSlug}/${noteSlug}`;
            const normalizedHref = normalizePath(href);
            // 使用规范化后的路径进行比较，确保高亮正确
            const isActive = currentPath === normalizedHref;
            return (
              <li>
                <a href={href} class:list={['note-link', { active: isActive }]} data-note-link>
                  <span class="note-link-title">{note.data.title}</span>
                </a>
              </li>
            );
          })}
        </ul>
      ) : (
        <p class="sidebar-empty">暂无笔记</p>
      )}
    </nav>
  </aside>

  <main class="note-main" transition:name="note-main">
    {noteEntry && Content ? (
      <article class="note-article">
        <header class="note-header">
          <h1 class="note-title">{noteTitle}</h1>
          <div class="note-meta">
            {tags && tags.length > 0 && (
              <div class="note-tags">
                {tags.map((tag: string) => (
                  <span class="note-tag">{tag}</span>
                ))}
              </div>
            )}
            {date && (
              <time datetime={date.toISOString()}>
                {date.toLocaleDateString('zh-CN', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            )}
          </div>
        </header>
        <div class="note-content">
          <Content />
        </div>
      </article>
    ) : (
      <div class="placeholder">
        {notes.length > 0 ? (
          <p>选择左侧笔记开始阅读</p>
        ) : (
          <p>暂无笔记，快去添加一些吧！</p>
        )}
      </div>
    )}
  </main>
</div>

<style>
  .notebook-layout {
    display: flex;
    gap: 1rem;
    height: calc(100vh - 140px);
    max-height: 800px;
    animation: fadeIn 0.4s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .sidebar {
    flex-shrink: 0;
    width: 280px;
    height: 100%;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(89, 56, 44, 0.1);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .sidebar-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--color-border);
    flex-shrink: 0;
  }

  .notes-nav {
    flex: 1;
    overflow-y: auto;
    min-height: 0;
  }

  /* 滚动条样式优化 */
  .notes-nav::-webkit-scrollbar,
  .note-main::-webkit-scrollbar {
    width: 8px;
  }

  .notes-nav::-webkit-scrollbar-track,
  .note-main::-webkit-scrollbar-track {
    background: transparent;
  }

  .notes-nav::-webkit-scrollbar-thumb,
  .note-main::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 4px;
  }

  .notes-nav::-webkit-scrollbar-thumb:hover,
  .note-main::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-secondary);
  }

  .back-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: var(--color-text-primary);
    text-decoration: none;
    border-radius: 8px;
    background: var(--color-border);
    flex-shrink: 0;
    transition: background 0.2s, color 0.2s;
  }

  .back-link:hover {
    background: var(--color-text-secondary);
    color: var(--color-bg);
  }

  .notebook-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .notes-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .notes-list li {
    margin-bottom: 0.25rem;
  }

  .note-link {
    display: block;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-text-primary);
    transition: background 0.2s;
  }

  .note-link:hover {
    background: var(--color-border);
  }

  .note-link.active {
    background: var(--color-border);
    font-weight: 600;
  }

  .note-link-title {
    display: block;
    font-size: 0.9375rem;
    line-height: 1.4;
  }


  .sidebar-empty {
    margin: 0;
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
  }

  .note-main {
    flex: 1;
    min-width: 0;
    height: 100%;
    overflow-y: auto;
  }

  .note-article {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(89, 56, 44, 0.1);
    padding: 1rem;
  }

  .note-header {
    margin-bottom: 1.25rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
  }

  .note-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .note-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .note-tags {
    display: flex;
    gap: 0.375rem;
    flex-wrap: wrap;
  }

  .note-tag {
    padding: 0.2rem 0.5rem;
    font-size: 0.75rem;
    background: var(--color-border);
    color: var(--color-text-primary);
    border-radius: 6px;
  }

  .note-content {
    line-height: 1.8;
    color: var(--color-text-primary);
  }

  .placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    color: var(--color-text-secondary);
    font-size: 1rem;
  }

  .note-content :global(h1),
  .note-content :global(h2),
  .note-content :global(h3),
  .note-content :global(h4),
  .note-content :global(h5),
  .note-content :global(h6) {
    scroll-margin-top: 100px;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
    color: var(--color-text-primary);
    line-height: 1.3;
  }

  .note-content :global(h1) {
    font-size: 1.75rem;
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 0.5rem;
  }

  .note-content :global(h2) {
    font-size: 1.375rem;
  }

  .note-content :global(h3) {
    font-size: 1.125rem;
  }

  .note-content :global(p) {
    margin-bottom: 1rem;
  }

  .note-content :global(ul),
  .note-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .note-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .note-content :global(code) {
    background: var(--color-border);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    color: var(--color-text-primary);
  }

  .note-content :global(pre) {
    background: var(--color-text-primary);
    color: var(--color-bg);
    padding: 1.25rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.25rem;
    line-height: 1.6;
    border: 1px solid var(--color-text-secondary);
  }

  .note-content :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
    font-size: 0.875rem;
  }

  .note-content :global(blockquote) {
    border-left: 4px solid var(--color-text-secondary);
    padding: 1rem 1rem 1rem 1.25rem;
    margin: 1rem 0;
    color: var(--color-text-secondary);
    font-style: italic;
    background: var(--color-border);
    border-radius: 4px;
  }

  .note-content :global(a) {
    color: var(--color-text-secondary);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s, color 0.2s;
  }

  .note-content :global(a:hover) {
    border-bottom-color: var(--color-text-secondary);
    color: var(--color-text-primary);
  }

  .note-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }

  .note-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.25rem;
  }

  .note-content :global(th),
  .note-content :global(td) {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }

  .note-content :global(th) {
    font-weight: 600;
    background: var(--color-border);
    color: var(--color-text-primary);
  }

  @media (max-width: 768px) {
    .notebook-layout {
      flex-direction: column;
      height: auto;
      max-height: none;
    }

    .sidebar {
      width: 100%;
      height: auto;
      max-height: 300px;
    }

    .note-main {
      height: auto;
      overflow-y: visible;
    }

    .notes-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 0.5rem;
    }

    .note-title {
      font-size: 1.35rem;
    }

    .note-content {
      padding: 1rem;
    }
  }
</style>

<script is:inline>
  // 规范化路径：移除尾随斜杠，统一格式
  function normalizePath(path) {
    return path.replace(/\/$/, '') || '/';
  }

  // 更新高亮状态的函数
  function updateActiveLink() {
    const currentPath = normalizePath(window.location.pathname);
    const links = document.querySelectorAll('[data-note-link]');
    
    links.forEach((link) => {
      const href = link.getAttribute('href');
      if (href) {
        const normalizedHref = normalizePath(href);
        // 使用规范化后的路径进行比较
        if (currentPath === normalizedHref) {
          link.classList.add('active');
        } else {
          link.classList.remove('active');
        }
      } else {
        link.classList.remove('active');
      }
    });
  }

  // 页面加载时更新
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updateActiveLink);
  } else {
    updateActiveLink();
  }

  // 监听 View Transitions 完成事件
  document.addEventListener('astro:page-load', updateActiveLink);
  
  // 兼容性：如果没有 View Transitions，监听 popstate 事件
  window.addEventListener('popstate', updateActiveLink);
</script>
