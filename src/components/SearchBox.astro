---
import { getAllNotes } from '../utils/notebooks';
import { getNotebookBySlug } from '../utils/notebooks';

// 获取所有笔记数据用于搜索
interface NoteSearchData {
  slug: string;
  title: string;
  notebook: string;
  notebookTitle: string;
  excerpt: string;
  tags: string[];
  date: string;
}

let notesData: NoteSearchData[] = [];
try {
  const allNotes = await getAllNotes();
  notesData = await Promise.all(
    allNotes.map(async (note) => {
      const notebook = await getNotebookBySlug(note.data.notebook);
      return {
        slug: note.slug,
        title: note.data.title,
        notebook: note.data.notebook,
        notebookTitle: notebook?.data.title || note.data.notebook,
        excerpt: note.data.excerpt || '',
        tags: note.data.tags || [],
        date: note.data.date.toISOString(),
      };
    })
  );
} catch (error) {
  console.error('Error loading notes for search:', error);
  notesData = [];
}
---

<div class="search-container" id="search-container">
  <div class="search-box">
    <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    </svg>
    <input
      type="text"
      id="search-input"
      class="search-input"
      placeholder="搜索笔记..."
      autocomplete="off"
    />
  </div>
  <div class="search-results" id="search-results"></div>
</div>

<script define:vars={{ notesData }}>
  const searchInput = document.getElementById('search-input');
  const searchResults = document.getElementById('search-results');
  const searchContainer = document.getElementById('search-container');
  
  let currentResults = [];

  // 搜索函数
  function searchNotes(query) {
    if (!query || query.trim().length === 0) {
      searchResults.innerHTML = '';
      searchResults.classList.remove('active');
      return;
    }

    const lowerQuery = query.toLowerCase().trim();
    const results = notesData.filter((note) => {
      const titleMatch = note.title.toLowerCase().includes(lowerQuery);
      const excerptMatch = note.excerpt.toLowerCase().includes(lowerQuery);
      const tagsMatch = note.tags.some(tag => tag.toLowerCase().includes(lowerQuery));
      const notebookMatch = note.notebookTitle.toLowerCase().includes(lowerQuery);
      
      return titleMatch || excerptMatch || tagsMatch || notebookMatch;
    }).slice(0, 10); // 最多显示10个结果

    currentResults = results;
    displayResults(results);
  }

  // 显示搜索结果
  function displayResults(results) {
    if (results.length === 0) {
      searchResults.innerHTML = '<div class="search-result-item no-results">未找到匹配的笔记</div>';
      searchResults.classList.add('active');
      return;
    }

    searchResults.innerHTML = results.map((note, index) => {
      const tagsHtml = note.tags.length > 0 
        ? `<div class="result-tags">${note.tags.map(tag => `<span class="result-tag">${tag}</span>`).join('')}</div>`
        : '';
      
      return `
        <a href="/notebooks/${note.notebook}/${note.slug}" class="search-result-item" data-index="${index}">
          <div class="result-header">
            <h4 class="result-title">${highlightMatch(note.title, searchInput.value)}</h4>
            <span class="result-notebook">${note.notebookTitle}</span>
          </div>
          ${note.excerpt ? `<p class="result-excerpt">${highlightMatch(note.excerpt, searchInput.value)}</p>` : ''}
          ${tagsHtml}
        </a>
      `;
    }).join('');
    
    searchResults.classList.add('active');
  }

  // 高亮匹配文本
  function highlightMatch(text, query) {
    if (!query) return text;
    const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
    return text.replace(regex, '<mark>$1</mark>');
  }

  // 输入事件
  searchInput.addEventListener('input', (e) => {
    searchNotes(e.target.value);
  });

  // 点击外部关闭
  document.addEventListener('click', (e) => {
    if (!searchContainer.contains(e.target)) {
      searchResults.classList.remove('active');
    }
  });

  // 键盘导航
  let selectedIndex = -1;
  searchInput.addEventListener('keydown', (e) => {
    const items = searchResults.querySelectorAll('.search-result-item');
    
    if (e.key === 'ArrowDown') {
      e.preventDefault();
      selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
      updateSelection(items);
    } else if (e.key === 'ArrowUp') {
      e.preventDefault();
      selectedIndex = Math.max(selectedIndex - 1, -1);
      updateSelection(items);
    } else if (e.key === 'Enter' && selectedIndex >= 0 && items[selectedIndex]) {
      e.preventDefault();
      items[selectedIndex].click();
    } else if (e.key === 'Escape') {
      searchResults.classList.remove('active');
      searchInput.blur();
    }
  });

  function updateSelection(items) {
    items.forEach((item, index) => {
      item.classList.toggle('selected', index === selectedIndex);
    });
    if (selectedIndex >= 0 && items[selectedIndex]) {
      items[selectedIndex].scrollIntoView({ block: 'nearest' });
    }
  }

  // 重置选中状态
  searchInput.addEventListener('input', () => {
    selectedIndex = -1;
  });
</script>

<style>
  .search-container {
    position: relative;
    flex: 1;
    max-width: 500px;
    margin: 0 2rem;
    min-width: 200px;
  }

  .search-box {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 0.75rem;
    width: 1.25rem;
    height: 1.25rem;
    color: #9ca3af;
    pointer-events: none;
    z-index: 1;
  }

  .search-input {
    width: 100%;
    padding: 0.625rem 1rem 0.625rem 2.75rem;
    font-size: 0.875rem;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    background: white;
    color: #111827;
    transition: all 0.2s;
  }

  .search-input:focus {
    outline: none;
    border-color: #6366f1;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
  }

  .search-input::placeholder {
    color: #9ca3af;
  }

  .search-results {
    position: absolute;
    top: calc(100% + 0.5rem);
    left: 0;
    right: 0;
    background: white;
    border-radius: 16px;
    box-shadow: 
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04),
      0 0 0 1px rgba(0, 0, 0, 0.05),
      inset 0 1px 0 rgba(255, 255, 255, 0.6);
    max-height: 480px;
    overflow-y: auto;
    overflow-x: hidden;
    display: none;
    z-index: 1000;
    border: 1px solid rgba(0, 0, 0, 0.06);
    animation: slideDown 0.25s cubic-bezier(0.16, 1, 0.3, 1);
    backdrop-filter: blur(10px);
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-12px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .search-results.active {
    display: block;
  }

  /* 自定义滚动条样式 */
  .search-results::-webkit-scrollbar {
    width: 8px;
  }

  .search-results::-webkit-scrollbar-track {
    background: transparent;
    margin: 8px 0;
  }

  .search-results::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, #d1d5db 0%, #e5e7eb 100%);
    border-radius: 4px;
    border: 2px solid transparent;
    background-clip: padding-box;
    transition: background 0.2s ease;
  }

  .search-results::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, #9ca3af 0%, #d1d5db 100%);
    background-clip: padding-box;
  }

  .search-result-item {
    display: block;
    padding: 1.125rem 1.5rem;
    text-decoration: none;
    color: inherit;
    border-bottom: 1px solid rgba(0, 0, 0, 0.04);
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    background: white;
  }

  .search-result-item:first-child {
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
  }

  .search-result-item:last-child {
    border-bottom: none;
    border-bottom-left-radius: 16px;
    border-bottom-right-radius: 16px;
  }

  .search-result-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(180deg, #6366f1 0%, #818cf8 100%);
    opacity: 0;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 0 3px 3px 0;
    box-shadow: 0 0 8px rgba(99, 102, 241, 0.3);
  }

  .search-result-item::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: linear-gradient(90deg, rgba(99, 102, 241, 0.05) 0%, rgba(99, 102, 241, 0.02) 50%, transparent 100%);
    opacity: 0;
    transition: opacity 0.25s ease;
    pointer-events: none;
  }

  .search-result-item:hover,
  .search-result-item.selected {
    background: linear-gradient(90deg, #f0f9ff 0%, #fafbff 50%, #ffffff 100%);
    padding-left: 1.75rem;
    transform: translateX(2px);
    box-shadow: inset 0 0 0 1px rgba(99, 102, 241, 0.1);
  }

  .search-result-item:hover::before,
  .search-result-item.selected::before {
    opacity: 1;
  }

  .search-result-item:hover::after,
  .search-result-item.selected::after {
    opacity: 1;
  }

  .search-result-item.no-results {
    color: #6b7280;
    text-align: center;
    padding: 3.5rem 1.5rem;
    cursor: default;
    background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
    border-radius: 16px;
  }

  .search-result-item.no-results::before,
  .search-result-item.no-results::after {
    display: none;
  }

  .result-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .result-title {
    margin: 0;
    font-size: 0.9375rem;
    font-weight: 600;
    color: #111827;
    flex: 1;
    line-height: 1.5;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    letter-spacing: -0.01em;
  }

  .search-result-item:hover .result-title,
  .search-result-item.selected .result-title {
    color: #6366f1;
    transform: translateX(2px);
  }

  .result-title mark {
    background: linear-gradient(120deg, #fef3c7 0%, #fde68a 50%, #fcd34d 100%);
    color: #78350f;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-weight: 700;
    box-shadow: 
      0 1px 2px rgba(146, 64, 14, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    position: relative;
    display: inline-block;
    transform: scale(1.05);
  }

  .result-notebook {
    font-size: 0.75rem;
    color: #6366f1;
    background: linear-gradient(135deg, #eef2ff 0%, #e0e7ff 100%);
    padding: 0.4375rem 0.875rem;
    border-radius: 8px;
    white-space: nowrap;
    font-weight: 600;
    border: 1px solid rgba(99, 102, 241, 0.25);
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 1px 2px rgba(99, 102, 241, 0.1);
    letter-spacing: 0.01em;
  }

  .search-result-item:hover .result-notebook,
  .search-result-item.selected .result-notebook {
    background: linear-gradient(135deg, #6366f1 0%, #818cf8 100%);
    color: white;
    border-color: transparent;
    transform: scale(1.08) translateY(-1px);
    box-shadow: 
      0 2px 4px rgba(99, 102, 241, 0.3),
      0 0 0 1px rgba(255, 255, 255, 0.1) inset;
  }

  .result-excerpt {
    margin: 0.75rem 0 0 0;
    font-size: 0.8125rem;
    color: #6b7280;
    line-height: 1.65;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.25s ease;
  }

  .search-result-item:hover .result-excerpt {
    color: #4b5563;
  }

  .result-excerpt mark {
    background: linear-gradient(120deg, #fef3c7 0%, #fde68a 50%, #fcd34d 100%);
    color: #78350f;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-weight: 600;
    box-shadow: 
      0 1px 2px rgba(146, 64, 14, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    position: relative;
    display: inline-block;
  }

  .result-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.875rem;
  }

  .result-tag {
    font-size: 0.6875rem;
    color: #6b7280;
    background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
    padding: 0.3125rem 0.75rem;
    border-radius: 12px;
    font-weight: 500;
    border: 1px solid #e5e7eb;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);
    letter-spacing: 0.01em;
  }

  .search-result-item:hover .result-tag,
  .search-result-item.selected .result-tag {
    background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
    color: #6366f1;
    border-color: rgba(99, 102, 241, 0.4);
    transform: translateY(-2px) scale(1.05);
    box-shadow: 
      0 2px 4px rgba(99, 102, 241, 0.2),
      0 0 0 1px rgba(99, 102, 241, 0.1) inset;
  }

  @media (max-width: 768px) {
    .search-container {
      margin: 0 1rem;
      max-width: 100%;
    }

    .search-results {
      max-height: 300px;
    }
  }
</style>

