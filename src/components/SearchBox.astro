---
import { getAllNotes } from '../utils/notebooks';
import { getNotebookBySlug } from '../utils/notebooks';
import SearchBoxReact from './SearchBoxReact';

// 获取所有笔记数据用于搜索
interface NoteSearchData {
  slug: string;
  title: string;
  notebook: string;
  notebookTitle: string;
  excerpt: string;
  tags: string[];
  date: string;
}

let notesData: NoteSearchData[] = [];
try {
  const allNotes = await getAllNotes();
  notesData = await Promise.all(
    allNotes.map(async (note) => {
      const notebook = await getNotebookBySlug(note.data.notebook);
      return {
        slug: note.slug,
        title: note.data.title,
        notebook: note.data.notebook,
        notebookTitle: notebook?.data.title || note.data.notebook,
        excerpt: note.data.excerpt || '',
        tags: note.data.tags || [],
        date: note.data.date.toISOString(),
      };
    })
  );
} catch (error) {
  console.error('Error loading notes for search:', error);
  notesData = [];
}
---

<SearchBoxReact notesData={notesData} client:load />

<style is:global>
  .search-container {
    position: relative;
    flex: 1;
    max-width: 500px;
    margin: 0 2rem;
    min-width: 200px;
  }

  .search-box {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 0.75rem;
    width: 1.25rem;
    height: 1.25rem;
    color: var(--color-text-secondary);
    pointer-events: none;
    z-index: 1;
  }

  .search-input {
    width: 100%;
    padding: 0.625rem 1rem 0.625rem 2.75rem;
    font-size: 0.875rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    background: var(--color-bg);
    color: var(--color-text-primary);
    transition: all 0.2s;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-text-secondary);
    box-shadow: 0 0 0 3px rgba(140, 91, 73, 0.1);
  }

  .search-input::placeholder {
    color: var(--color-text-secondary);
  }

  .search-results {
    position: absolute;
    top: calc(100% + 0.5rem);
    left: 0;
    right: 0;
    background: var(--color-bg);
    border-radius: 16px;
    box-shadow: 
      0 20px 25px -5px rgba(89, 56, 44, 0.15),
      0 10px 10px -5px rgba(89, 56, 44, 0.1),
      0 0 0 1px rgba(89, 56, 44, 0.1);
    max-height: 480px;
    overflow-y: auto;
    overflow-x: hidden;
    display: none;
    z-index: 1000;
    border: 1px solid var(--color-border);
    animation: slideDown 0.25s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-12px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .search-results.active {
    display: block;
  }

  /* 自定义滚动条样式 */
  .search-results::-webkit-scrollbar {
    width: 8px;
  }

  .search-results::-webkit-scrollbar-track {
    background: transparent;
    margin: 8px 0;
  }

  .search-results::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 4px;
    border: 2px solid transparent;
    background-clip: padding-box;
    transition: background 0.2s ease;
  }

  .search-results::-webkit-scrollbar-thumb:hover {
    background: var(--color-text-secondary);
    background-clip: padding-box;
  }

  .search-result-item {
    display: block;
    padding: 1.125rem 1.5rem;
    text-decoration: none;
    color: inherit;
    border-bottom: 1px solid var(--color-border);
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    background: var(--color-bg);
  }

  .search-result-item:first-child {
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
  }

  .search-result-item:last-child {
    border-bottom: none;
    border-bottom-left-radius: 16px;
    border-bottom-right-radius: 16px;
  }

  .search-result-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--color-text-secondary);
    opacity: 0;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 0 3px 3px 0;
  }

  .search-result-item:hover,
  .search-result-item.selected {
    background: var(--color-border);
    padding-left: 1.75rem;
    transform: translateX(2px);
    box-shadow: inset 0 0 0 1px var(--color-border);
  }

  .search-result-item:hover::before,
  .search-result-item.selected::before {
    opacity: 1;
  }

  .search-result-item.no-results {
    color: var(--color-text-secondary);
    text-align: center;
    padding: 3.5rem 1.5rem;
    cursor: default;
    background: var(--color-border);
    border-radius: 16px;
  }

  .search-result-item.no-results::before,
  .search-result-item.no-results::after {
    display: none;
  }

  .result-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .result-title {
    margin: 0;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text-primary);
    flex: 1;
    line-height: 1.5;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    letter-spacing: -0.01em;
  }

  .search-result-item:hover .result-title,
  .search-result-item.selected .result-title {
    color: var(--color-text-secondary);
    transform: translateX(2px);
  }

  .result-title mark {
    background: var(--color-border);
    color: var(--color-text-primary);
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-weight: 700;
    box-shadow: 0 1px 2px rgba(89, 56, 44, 0.2);
    position: relative;
    display: inline-block;
    transform: scale(1.05);
  }

  .result-notebook {
    font-size: 0.75rem;
    color: var(--color-text-primary);
    background: var(--color-border);
    padding: 0.4375rem 0.875rem;
    border-radius: 8px;
    white-space: nowrap;
    font-weight: 600;
    border: 1px solid var(--color-border);
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 1px 2px rgba(89, 56, 44, 0.15);
    letter-spacing: 0.01em;
  }

  .search-result-item:hover .result-notebook,
  .search-result-item.selected .result-notebook {
    background: var(--color-text-secondary);
    color: var(--color-bg);
    border-color: transparent;
    transform: scale(1.08) translateY(-1px);
    box-shadow: 0 2px 4px rgba(89, 56, 44, 0.3);
  }

  .result-excerpt {
    margin: 0.75rem 0 0 0;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    line-height: 1.65;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.25s ease;
  }

  .search-result-item:hover .result-excerpt {
    color: var(--color-text-primary);
  }

  .result-excerpt mark {
    background: var(--color-border);
    color: var(--color-text-primary);
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-weight: 600;
    box-shadow: 0 1px 2px rgba(89, 56, 44, 0.2);
    position: relative;
    display: inline-block;
  }

  .result-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.875rem;
  }

  .result-tag {
    font-size: 0.6875rem;
    color: var(--color-text-secondary);
    background: var(--color-bg);
    padding: 0.3125rem 0.75rem;
    border-radius: 12px;
    font-weight: 500;
    border: 1px solid var(--color-border);
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 1px 2px rgba(89, 56, 44, 0.1);
    letter-spacing: 0.01em;
  }

  .search-result-item:hover .result-tag,
  .search-result-item.selected .result-tag {
    background: var(--color-border);
    color: var(--color-text-primary);
    border-color: var(--color-text-secondary);
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 2px 4px rgba(89, 56, 44, 0.2);
  }

  @media (max-width: 768px) {
    .search-container {
      margin: 0 1rem;
      max-width: 100%;
    }

    .search-results {
      max-height: 300px;
    }
  }
</style>

