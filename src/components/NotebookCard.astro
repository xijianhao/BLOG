---
import type { CollectionEntry } from 'astro:content';

interface Props {
  notebook: CollectionEntry<'notebooks'> | CollectionEntry<'aiNotebooks'>;
  noteCount?: number;
  baseUrl?: string;
}

const { notebook, noteCount = 0, baseUrl = '/notebooks' } = Astro.props;
const { title, description, icon, color } = notebook.data;

// å¤„ç†å›¾æ ‡ï¼šè§£æ SVG æˆ–è¿”å› emoji
function processIcon(icon: string | null | undefined, color: string | null | undefined): string {
  if (!icon) return 'ğŸ“š';
  
  // æ¸…ç†å¤šè¡Œå­—ç¬¦ä¸²ä¸­çš„ç©ºç™½
  let cleanedIcon = icon.trim().replace(/\s+/g, ' ').trim();
  
  // å¦‚æœæ˜¯SVGï¼Œæå–å†…å®¹å¹¶å¤„ç†
  if (cleanedIcon.includes('<svg')) {
    // æå– SVG æ ‡ç­¾å†…çš„æ‰€æœ‰å†…å®¹
    const svgMatch = cleanedIcon.match(/<svg([^>]*)>(.*?)<\/svg>/s);
    if (svgMatch) {
      let svgAttrs = svgMatch[1];
      let svgInner = svgMatch[2];
      
      // æ›¿æ¢é¢œè‰²ä¸º currentColor
      svgInner = svgInner.replace(/(fill|stroke)=["']#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})["']/gi, `$1="currentColor"`);
      
      // ç¡®ä¿æœ‰å¿…è¦çš„å±æ€§ï¼ˆç§»åŠ¨ç«¯å…¼å®¹æ€§ï¼‰
      if (!svgAttrs.includes('xmlns=')) {
        svgAttrs += ' xmlns="http://www.w3.org/2000/svg"';
      }
      if (!svgAttrs.includes('viewBox') && !svgAttrs.includes('width')) {
        svgAttrs += ' viewBox="0 0 24 24"';
      }
      if (!svgAttrs.includes('preserveAspectRatio')) {
        svgAttrs += ' preserveAspectRatio="xMidYMid meet"';
      }
      // ç§»åŠ¨ç«¯ç‰¹å®šï¼šæ·»åŠ æ˜ç¡®çš„å°ºå¯¸å±æ€§
      if (!svgAttrs.includes('width=')) {
        svgAttrs += ' width="56" height="56"';
      }
      
      return `<svg${svgAttrs}>${svgInner}</svg>`;
    }
  }
  
  // å¦åˆ™è¿”å›åŸå§‹å›¾æ ‡ï¼ˆemojiç­‰ï¼‰
  return cleanedIcon;
}

const iconContent = processIcon(icon, color);
const isSvg = iconContent.includes('<svg');

---

<a href={`${baseUrl}/${notebook.slug}`} class="notebook-card">
  {isSvg ? (
    <div 
      class="notebook-icon" 
      style={`--notebook-color: ${color || '#6366f1'}`}
      set:html={iconContent}
    />
  ) : (
    <div class="notebook-icon" style={`--notebook-color: ${color || '#6366f1'}`}>
      {iconContent}
    </div>
  )}
  <div class="notebook-content">
    <div class="notebook-header">
